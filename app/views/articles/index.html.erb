<p id="notice"><%= notice %></p>

<h1>Listing Articles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Recipient</th>
      <th>Tag</th>
      <th>Location</th>
      <th>Detail</th>
      <th>Context</th>
      <th>Followtimes</th>
      <th>Type</th>
      <th>Status</th>
      <th>Follow</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.name %></td>
        <td><%= article.recipient %></td>
        <td><%= article.tag %></td>
        <td><%= article.location %></td>
        <td><%= article.detail %></td>
        <td><%= article.context %></td>
        <td><%= article.followtimes %></td>
        <td><%= article.type %></td>
        <td><%= article.status %></td>
        <td><%= article.follow %></td>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

